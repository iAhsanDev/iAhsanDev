<mvc:View
	controllerName="sap.ui.demo.nav.controller.employee.EmployeeList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout">
	<Page
		id="employeeListPage"
		title="{i18n>EmployeeList}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                    header="{i18n>TransferPTileTitle}"
                   press=".onNavToEmployeeOverview">
                    <tileContent>
                        <TileContent>
                            <content>
                                	<ImageContent src="sap-icon://split"/>
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
         <!-- 2nd tile -->
                  <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                    header="{i18n>TransferOCTileTitle}"
                     press=".onNavToTransferOC">
                    <tileContent>
                        <TileContent>
                            <content>
                                	<ImageContent src="sap-icon://bbyd-active-sales"/>
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
		</content>
	</Page>
</mvc:View>
